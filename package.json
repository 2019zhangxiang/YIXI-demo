{
  "name": "card-activity-admin",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "卡牌活动后台管理系统 - 基于 React + TypeScript + Vite + Ant Design 构建",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && node scripts/build-analyzer.js",
    "build:staging": "tsc && vite build --mode staging",
    "build:report": "npm run build && npx vite-bundle-analyzer dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "preview:dist": "vite preview --outDir dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist reports node_modules/.vite",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "size-limit": "npm run build && du -sh dist/*"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@reduxjs/toolkit": "^2.0.1",
    "antd": "^5.12.2",
    "axios": "^1.6.2",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.21.0",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.1.1",
    "cors": "^2.8.5",
    "cssnano": "^7.1.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "express": "^5.1.0",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "less": "^4.4.1",
    "prettier": "^3.1.1",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
